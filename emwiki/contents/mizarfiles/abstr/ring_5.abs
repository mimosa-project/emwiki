for n being even Nat,
    x being Element of F_Real holds x|^n >= 0.F_Real;

theorem :: RING_5:2
for R being Ring, a being Element of R holds 2 '*' a = a + a;

theorem :: RING_5:3
for R being Ring, a being Element of R holds a |^ 2 = a * a;

