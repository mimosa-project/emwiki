end;

theorem :: GAUSSINT:4
  for z, w be G_INTEG holds g_int_add.(z,w) = z+w;

theorem :: GAUSSINT:5
  for z be G_INTEG, i be Integer holds Sc_Mult.(i,z) = i*z;

definition
