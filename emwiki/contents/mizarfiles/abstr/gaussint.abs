  reduce In(i,G_INT_SET) to i;
end;

theorem :: GAUSSINT:2
  for x be object st x in G_INT_SET holds x is G_INTEG;

theorem :: GAUSSINT:3
  for x be object st x is G_INTEG holds x in G_INT_SET;

definition
