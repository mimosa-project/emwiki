definition
  let f be FinSequence;
  attr f is tabular means
:: MATRIX_0:def 1

  ex n being Nat st for x st x in rng f ex s
  being FinSequence st s=x & len s = n;
end;

registration
  cluster tabular for FinSequence;
end;

