theorem :: NUMPOLY1:20
  Triangle n >= 0;

registration let n be Nat;
  cluster Triangle n -> non negative;
end;

registration let n be non zero Nat;
  cluster Triangle n -> positive;
end;

registration let n be Nat;
  cluster Triangle n -> natural;
