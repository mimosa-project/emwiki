end;

theorem :: NUMPOLY1:59
  (Triangle n) |^ 2 = Sum NPower (3, n);

theorem :: NUMPOLY1:60
  for n being non trivial Nat holds
    Triangle n + Triangle (n -' 1) * Triangle (n + 1) = (Triangle n) |^ 2;

theorem :: NUMPOLY1:61
  (Triangle n) |^ 2 + (Triangle (n + 1)) |^ 2 = Triangle ((n + 1) |^ 2);

theorem :: NUMPOLY1:62
  (Triangle (n + 1)) |^ 2 - (Triangle n) |^ 2 = (n + 1) |^ 3;

theorem :: NUMPOLY1:63
